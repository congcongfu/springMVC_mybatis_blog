<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3.0-mapper.dtd">  
<mapper namespace="com.congfu.dao.StudentDao">  
  <resultMap id="studentResultMap" type="com.congfu.model.Student" >
  	<id property="id" column="id"/>
  	<result property="name" column="name"/>
  	<result property="age" column="age" />
  	<result property="sex" column="sex" />
  </resultMap>
  <!--新增学生信息 -->
  <insert id="insert" parameterType="com.congfu.model.Student" useGeneratedKeys="true" keyProperty="id">
  		insert into Student(name,age,sex) values(#{name},#{age},#{sex})
  </insert>
  <!-- 根据id 查询学生 -->
  <select id="findById" parameterType="Integer" resultType="com.congfu.model.Student">
  	 select id, name, age, sex from Student 
  					where id= #{id}
  </select> 
  <!-- 根据id 更新 -->
  <update id="update" parameterType="com.congfu.model.Student">
  	update Student set
  	name=#{name},
  	age=#{age},
  	sex=#{sex}
  	where id=#{id}
  </update>
  <!-- 条件查询 -->
  <select id="findByQuery" parameterType="com.congfu.model.Student" resultMap="studentResultMap">
  		select id, name, age, sex from Student 
  		<where>
  				<if test="id >0" >
  					 id=#{id, jdbcType=INTEGER}
				</if>
				<if test="name !=null and name!='' ">
					AND name LIKE CONCAT(CONCAT('%',#{name}),'%')
				</if>
				<if test="age >0" >
					And age=#{age, jdbcType=INTEGER}
				</if>
				<if test="sex !=null and sex !='' ">
					And sex=#{sex, jdbcType=VARCHAR}
				</if>
  		</where>
  </select>
  
      
</mapper>  